{
    "name": "zhwei/lego-demo",
    "description": "The Laravel Framework.",
    "keywords": [
        "framework",
        "laravel"
    ],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "7.3.*",
        "ext-json": "*",
        "laravel/framework": "^7.0",
        "laravel/tinker": "@stable",
        "wutongwan/lego": "dev-master"
    },
    "require-dev": {
        "fzaninotto/faker": "@stable",
        "mockery/mockery": "@stable",
        "phpunit/phpunit": "@stable",
        "mpociot/laravel-test-factory-helper": "@stable"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/",
            "Lego\\Demo\\": "lego/demo/app"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "repositories": {
        "packagist": {
            "type": "composer",
            "url": "https://mirrors.aliyun.com/composer/"
        },
        "lego": {
            "type": "path",
            "url": "./lego"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan vendor:publish --tag=lego-assets --force"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan vendor:publish --tag=lego-assets --force"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "cache-dir": ".composer-cache"
    }
}
